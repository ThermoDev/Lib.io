@model Lib.io.Models.Book
@{
    ViewBag.Title = "Details";
}

<h2>@Model.Name</h2>

<ul>
    <li>
        <b>Genre:</b> @Model.Genre.Name
    </li>
    <li>
        <b>Release Date:</b> @Model.ReleaseDate.ToString()
    </li>
    <li>
        <b>Date Added:</b> @Model.DateAdded.ToShortDateString()
    </li>
    <li>
        <b>Number in Stock: </b>@Model.NumberInStock
    </li>
</ul>
