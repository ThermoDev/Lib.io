@model List<Lib.io.Models.Book>

<h1>Books</h1>

@Html.ActionLink("New Book", "New", "Books", null, new { @class = "btn btn-primary" })

@if (Model.Count == 0) {
    <text>A book has not yet been entered into the system.</text>
}
else {
    <table id="books" class="table table-bordered">
        <thead>
            <tr>
                <th>Book</th>
                <th>Genre</th>
                <th>Number in Stock</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
