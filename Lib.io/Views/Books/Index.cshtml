@model List<Lib.io.Models.Book>

<h1>Books</h1>

@Html.ActionLink("New Book", "New", "Books", new { @class = "btn btn-primary" })

@if (Model.Count == 0) {
    <text>A book has not yet been entered into the system.</text>
}
else {
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Book</th>
                <th>Genre</th>
            </tr>
        </thead>
        @foreach (var book in Model) {
            <tr>
                <td>
                    @Html.ActionLink(book.Name, "Edit", "Books", new { Id = book.Id }, null)
                </td>
                <td>
                    @book.Genre.Name
                </td>
            </tr>
        }
    </table>
}